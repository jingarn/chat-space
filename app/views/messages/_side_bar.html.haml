.Side-bar
  .Side-bar__user-name
    .Side-bar__user-name__top-items
      .Side-bar__user-name__top-items__name
        = current_user.name
      .Side-bar__user-name__top-items__icons
        .Side-bar__user-name__top-items__icons__new-group
          = link_to new_group_path, class: "Link-icon" do
            = icon('far', 'edit')
        .Side-bar__user-name__top-items__icons__edit-user
          = link_to edit_user_path(current_user), class: "Link-icon" do
            = icon('fas', 'cog')
  .Side-bar__group-list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .Side-bar__group-list__name
          = group.name
        .Side-bar__group-list__message
          メッセージはまだありません
